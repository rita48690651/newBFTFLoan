@model newBFTFLoan.Models.ViewModels.VerifyEmailVM

@{ ViewBag.Title = "VerifyEmail"; }

<h2>電子信箱驗證</h2>

@* OTP 剩餘時間 *@
<h2>OTP 剩餘時間: @ViewBag.RemainingSeconds</h2>

@using (Html.BeginForm())
{
@Html.AntiForgeryToken()

                <div class="form-horizontal">
                    <hr />
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    <div class="form-group">
                        @Html.LabelFor(model => model.OTPUserInput, htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.OTPUserInput, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.OTPUserInput, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="col-md-offset-2 col-md-10">
                            <input type="submit" value="確認" class="btn btn-default" />
                        </div>
                    </div>
                </div>}

<div>
    @Html.ActionLink("回到首頁", "Index", "Home")
</div>
